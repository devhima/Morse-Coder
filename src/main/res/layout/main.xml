<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#5C5C5C">

	<LinearLayout
		android:id="@+id/linear5"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#5C5C5C">

		<ScrollView
			android:id="@+id/body_src"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:id="@+id/body"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:background="#5C5C5C">

				<LinearLayout
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:background="#01000E"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Morse Coder"
						android:textSize="25sp"
						android:textColor="#FFFFFF"
						android:layout_weight="2"/>

					<TextView
						android:id="@+id/help"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="right"
						android:text="Help"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="right|center_vertical"
						android:layout_weight="1"/>

				</LinearLayout>

				<Spinner
					android:id="@+id/spinner"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:padding="8dp"
					android:spinnerMode="dialog"/>

				<LinearLayout
					android:id="@+id/linear10"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:id="@+id/linear11"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_gravity="left"
						android:layout_weight="1">

						<EditText
							android:id="@+id/edittext1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="10dp"
							android:padding="8dp"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:hint="Your message"
							android:textColorHint="#FFFFFF"/>

						<EditText
							android:id="@+id/edittext2"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="10dp"
							android:padding="8dp"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:hint="Morse code"
							android:textColorHint="#FFFFFF"/>

					</LinearLayout>

					<Button
						android:id="@+id/clear"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:background="#000000"
						android:text="Clear"
						android:textSize="12sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="right|center_vertical"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/morse_buttons_l"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:orientation="horizontal">

					<Button
						android:id="@+id/dot"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="•"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>

					<Button
						android:id="@+id/dash"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="---"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF"/>

					<Button
						android:id="@+id/s3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="3 Space"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>

					<Button
						android:id="@+id/s7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="7 Space"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:orientation="horizontal">

					<Button
						android:id="@+id/get_code"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="Get code"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingRight="2dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">

					<Button
						android:id="@+id/paste"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="Paste"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>

					<Button
						android:id="@+id/copy"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:background="#000000"
						android:text="Copy to clipboard"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1"/>

					<ListView
						android:id="@+id/sharelist"
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:padding="8dp"
						android:choiceMode="none"/>

					<Spinner
						android:id="@+id/share_spinner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:spinnerMode="dropdown"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear7"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="10dp"
					android:paddingRight="8dp"
					android:paddingBottom="10dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Signal Length : "
						android:textSize="14sp"
						android:textColor="#FFFFFF"/>

					<EditText
						android:id="@+id/signal_unit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:hint="Signal unit"
						android:textColorHint="#FFFFFF"
						android:singleLine="true"
						android:inputType="numberSigned"
						android:layout_gravity="left|center_vertical"
						android:layout_weight="1"/>

					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text=" x 250ms"
						android:textSize="14sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal|center_vertical"
						android:layout_weight="1"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:paddingLeft="8dp"
					android:paddingRight="8dp">

					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:orientation="horizontal">

						<Button
							android:id="@+id/vibration"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:paddingLeft="8dp"
							android:paddingRight="8dp"
							android:background="#000000"
							android:text="Vibration"
							android:textSize="14sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1"/>

						<Button
							android:id="@+id/sound"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:background="#000000"
							android:text="Sound"
							android:textSize="14sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1"/>

						<Button
							android:id="@+id/signal_light"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:paddingLeft="8dp"
							android:paddingRight="8dp"
							android:background="#000000"
							android:text="Light Signal"
							android:textSize="14sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1"/>

					</LinearLayout>

					<TextView
						android:layout_height="match_parent"
						android:text="By. Ibrahim Said Elsharawy - © DevHima 2018"
						android:layout_width="match_parent"
						android:textAlignment="center"
						android:textColor="#0CFF26"
						android:id="@+id/tvMyLink"
						android:textStyle="italic"/>

				</LinearLayout>

			</LinearLayout>

		</ScrollView>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/light"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#E0E0E0"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/help_img"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/help_img"
			android:scaleType="fitCenter"/>

		<TextView
			android:id="@+id/textview2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Singnal"
			android:textSize="14sp"
			android:textColor="#F44336"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1"/>

	</LinearLayout>

</LinearLayout>

